root = true

[*]
charset = utf-8
end_of_line = crlf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[**.{json,yml,pug,xml}]
indent_style = space
indent_size = 2

[**.{htm,html}]
indent_style = space

[**.md]
indent_style = space
trim_trailing_whitespace = false
